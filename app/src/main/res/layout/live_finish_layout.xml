<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      >
    <ImageView
        android:id="@+id/img_finish_confirmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/live_close"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />

    <com.hyphenate.easeui.widget.EaseImageView
        android:id="@+id/anchor_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ease_default_avatar"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/common_white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:layout_marginTop="32dp"
        style="@style/LiveEndTextStyle"
        android:text="直播已暂停"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/txt_watched_count"
        style="@style/LiveEndTextStyle"
        android:text="0人看过"
        android:layout_marginTop="8dp"
        />


  </LinearLayout>

  <Button
      android:id="@+id/live_close_confirm"
      android:layout_width="match_parent"
      android:layout_height="@dimen/button_normal_height"
      android:text="继续直播"
      android:textSize="18sp"
      android:textColor="@color/common_white"
      android:background="@drawable/common_blue_btn_bg"
      android:layout_weight="0"
      android:layout_margin="36dp"
      />



</LinearLayout>